@model UnitTestingInNet_FinalProject.Models.OrderViewModel

@{
    ViewData["Title"] = "Confirm Order";
}

<h1>Confirm Order</h1>

<div class="container">
    <h3>Order Summary</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.CartItems != null && Model.CartItems.Count > 0)
            {
                foreach (var cartItem in Model.CartItems)
                {
                    <tr>
                        <td>@cartItem.Product.Name</td>
                        <td>@cartItem.ProductQuantity</td>
                        <td>@(cartItem.Product.Price * cartItem.ProductQuantity)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No items in the cart.</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Order Details</h3>
    <!-- Change the form action to point to the action that updates the price based on the selected country -->
    <form asp-action="ConfirmOrder">
    <div class="form-group">
        <label asp-for="Order.Address">Address</label>
        <input asp-for="Order.Address" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Order.MailingCode">Mailing Code</label>
        <input asp-for="Order.MailingCode" class="form-control" required />
    </div>
    </form>
    <form asp-action="ConfirmPrice" method="post" asp-controller="Store">
      
        <div class="form-group" >
            <label asp-for="Order.DestinationCountryId">Destination Country</label>
            <select  for="DestinationCountryId" asp-items="@(new SelectList(Model.AvailableCountries, "Id", "Name"))" class="form-control" onchange="this.form.submit()" required>
                <option value="">Select a country</option>
            </select>
        </div>

        @if (Model != null && Model.SelectedConversionRate != null)
        {
            <div class="form-group">
                <label> Country ConversionRate: @(Model.SelectedConversionRate.ToString("C"))</label>
            </div>
        }

        @if (Model != null && Model.SelectedTaxRate != null)
        {
            <div class="form-group">
                <label>Tax  (@Model.SelectedCountryName Rate): @(Model.SelectedTaxRate.ToString("C"))</label>
            </div>
        }

        @if (Model != null && Model.TotalPrice != null)
        {
            <div class="form-group">
                <label> Final Total Price (with Taxes): @(Model.TotalPrice.ToString("C"))</label>
            </div>
        }

        <!-- The button to finally submit the order after all information is entered and prices are updated -->
        <button type="submit" class="btn btn-primary">Submit Order</button>
    </form>
</div>
